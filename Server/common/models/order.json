{
  "name": "Order",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "order-time": {
      "type": "date"
    },
    "quantity": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "product": {
      "type": "hasOne",
      "model": "Product",
      "foreignKey": "product_id"
    },
    "shoppingCart": {
      "type": "belongsTo",
      "model": "ShoppingCart",
      "foreignKey": "shopping_cart_id"
    },
    "member": {
      "type": "belongsTo",
      "model": "Member",
      "foreignKey": "user_id"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
