{
  "name": "Product",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "product_id": {
      "type": "string",
      "id": true,
      "generated": true
    },
    "image": {
      "type": "string"
    },
    "time": {
      "type": "date",
      "default": "$now"
    },
    "name": {
      "type": "string"
    },
    "material": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "default" : 10
    }
  },
  "validations": [],
  "relations": {
    "category": {
      "type": "belongsTo",
      "model": "Category",
      "foreignKey": "category_id"
    },
    "member": {
      "type": "belongsTo",
      "model": "Member",
      "foreignKey": "user_id"
    },
    "post": {
      "type": "belongsTo",
      "model": "Post",
      "foreignKey": "post_id"
    },
    "product": {
      "type": "hasMany",
      "model": "Sticker",
      "foreignKey": "product_id_1"
    },
    "sticker": {
      "type": "hasMany",
      "model": "Sticker",
      "foreignKey": "product_id_2"
    },
    "likes": {
      "type": "hasMany",
      "model": "Like",
      "foreignKey": "product_id"
    },
    "shares": {
      "type": "hasMany",
      "model": "Share",
      "foreignKey": "product_id"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "product_id"
    },
    "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "product_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
